<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TeamNameTextViews" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/MediumMargin</item>
        <item name="android:layout_marginTop">@dimen/MediumMargin</item>
    </style>

    <style name="ScoreTextViews" parent="AppTheme">
        <item name="android:textSize">52sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="BigScoreButton1" parent="AppTheme">
        <item name="android:background">@color/colorBigScore1Back</item>
        <item name="android:textColor">@color/colorBigScore1Text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">@dimen/SmallMargin</item>
    </style>

    <style name="BigScoreButton2" parent="AppTheme">
        <item name="android:background">@color/colorBigScore2Back</item>
        <item name="android:textColor">@color/colorBigScore2Text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">@dimen/SmallMargin</item>
    </style>

    <style name="ExtraScoreButtons" parent="AppTheme">
        <item name="android:background">@color/colorExtraScoreBack</item>
        <item name="android:textColor">@color/colorExtraScoreText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">@dimen/SmallMargin</item>
    </style>

    <style name="ResetButton" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
